{
    // by catastrophy at https://github.com/CatastrophicCat123
    "format_version": "1.10.0",
    "particle_effect": {
        "description": {
            "identifier": "qsc:selection_axis_y",
            "basic_render_parameters": {
                "material": "particles_blend",
                "texture": "textures/blocks/concrete_black"
            }
        },
        "components": {
            "minecraft:emitter_initialization": {
                "creation_expression": "variable.t = 0.1;variable.p = 8;"
            },
            "minecraft:emitter_rate_instant": {
                "num_particles": 1
            },
            "minecraft:emitter_lifetime_once": {
                "active_time": 1
            },
            "minecraft:emitter_shape_point": {},
            "minecraft:particle_lifetime_expression": {
                "max_lifetime": "v.p/10"
            },
            "minecraft:particle_motion_parametric": {
                "relative_position": ["v.offset_x", "v.offset_y", "v.offset_z"]
            },
            "minecraft:particle_appearance_billboard": {
                "size": ["v.size_x", "v.size_y"],
                "facing_camera_mode": "direction_y",
                "direction": {
                    "mode": "custom",
                    "custom_direction": [0, 0, 1]
                },
                "uv": {
                    "texture_width": 16,
                    "texture_height": 16,
                    "uv": [0, 0],
                    "uv_size": [16, 16]
                }
            },
            "minecraft:particle_appearance_tinting": {
                "color": [
                    "variable.color.r ",
                    "variable.color.g",
                    "variable.color.b",
                    "(-v.t*math.cos((2/v.p)*math.pi*v.particle_age*600)+v.t)/2"
                ]
            }
        }
    }
}
